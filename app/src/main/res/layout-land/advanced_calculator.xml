<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:orientation="horizontal">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_formula"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="25dp"
        android:gravity="end"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:backgroundTint="#00424200"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="formula"/>

    <!--  Result  -->
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_result"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp"
        android:gravity="end"
        android:text="@string/btn0"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:backgroundTint="#00424200"
        app:layout_constraintTop_toBottomOf="@+id/tv_formula"/>

    <!--ButtonLayout-->
    <GridLayout
        android:id="@+id/layoutMain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="20dp"
        android:columnCount="7"
        android:rowCount="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_result">
        <!--  Buttons  -->
        <Button
            style="@style/PrimaryButtonStyle"
            android:id="@+id/btn_paranteses_close"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_marginEnd="10dp"
            android:text="@string/paranteses_close"
            android:textSize="15sp"
            app:cornerRadius="40dp" />

        <Button
            style="@style/PrimaryButtonStyle"
            android:id="@+id/btn_back"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnSpan="2"
            android:layout_columnWeight="1"
            android:layout_marginEnd="10dp"
            android:text="@string/backspace"
            android:textSize="15sp"
            app:cornerRadius="40dp" />
        <Button
            style="@style/PrimaryButtonStyle"
            android:id="@+id/btn_clear"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnSpan="2"
            android:layout_columnWeight="1"
            android:layout_marginEnd="10dp"
            android:text="@string/clear"
            android:textSize="15sp"
            app:cornerRadius="40dp" />

        <Button
            style="@style/PrimaryButtonStyle"
            android:id="@+id/btn_all_clear"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnSpan="2"
            android:layout_columnWeight="1"
            android:layout_marginEnd="10dp"
            android:text="@string/all_clear"
            android:textSize="15sp"
            app:cornerRadius="40dp" />

        <Button
            style="@style/PrimaryButtonStyle"
            android:id="@+id/sqrt"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnSpan="2"
            android:layout_columnWeight="1"
            android:layout_marginEnd="10dp"
            android:text="@string/sqrt"
            android:textSize="15sp"
            app:cornerRadius="40dp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btn_7"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_marginEnd="10dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/white"
            android:text="@string/btn7"
            android:textSize="30sp"
            app:cornerRadius="15dp"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btn_8"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_marginEnd="10dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/white"
            android:text="@string/btn8"
            android:textSize="30sp"
            app:cornerRadius="15dp"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btn_9"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_marginEnd="10dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/white"
            android:text="@string/btn9"
            android:textSize="30sp"
            app:cornerRadius="15dp"/>
        <Button
            style="@style/PrimaryButtonStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btn_multiply"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="@string/multiply"
            android:textSize="15sp"
            app:cornerRadius="15dp"/>
        <Button
            style="@style/PrimaryButtonStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btn_divide"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="@string/divide"
            android:textSize="15sp"
            app:cornerRadius="15dp"/>
        <Button
            style="@style/PrimaryButtonStyle"
            android:id="@+id/sin"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_marginEnd="10dp"
            android:text="@string/sin"
            android:textSize="13sp"
            app:cornerRadius="40dp" />

        <Button
            android:id="@+id/cos"
            style="@style/PrimaryButtonStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_marginEnd="10dp"
            android:text="@string/cos"
            android:textSize="15sp"
            app:cornerRadius="40dp" />
        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btn_4"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_marginEnd="10dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/white"
            android:text="@string/btn4"
            android:textSize="30sp"
            app:cornerRadius="15dp"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btn_5"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_marginEnd="10dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/white"
            android:text="@string/btn5"
            android:textSize="30sp"
            app:cornerRadius="15dp"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btn_6"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_marginEnd="10dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/white"
            android:text="@string/btn6"
            android:textSize="30sp"
            app:cornerRadius="15dp"/>
        <Button
            style="@style/PrimaryButtonStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btn_plus"
            android:layout_rowWeight="1"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_marginEnd="10dp"
            android:text="@string/plus"
            android:textSize="15sp"
            app:cornerRadius="15dp"/>

        <Button
            style="@style/PrimaryButtonStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btn_minus"
            android:layout_rowWeight="1"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="@string/minus"
            android:textSize="15sp"
            app:cornerRadius="15dp"/>

        <Button
            style="@style/PrimaryButtonStyle"
            android:id="@+id/tan"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_marginEnd="10dp"
            android:text="@string/tan"
            android:textSize="15sp"
            app:cornerRadius="40dp" />

        <Button
            style="@style/PrimaryButtonStyle"
            android:id="@+id/percent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_marginEnd="10dp"
            android:text="@string/percent"
            android:textSize="15sp"
            app:cornerRadius="40dp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btn_1"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_marginEnd="10dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/white"
            android:text="@string/btn1"
            android:textSize="30sp"
            app:cornerRadius="15dp"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btn_2"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_marginEnd="10dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/white"
            android:text="@string/btn2"
            android:textSize="30sp"
            app:cornerRadius="15dp"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btn_3"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_marginEnd="10dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/montserrat_medium"
            android:text="@string/btn3"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:cornerRadius="15dp"/>
        <Button
            style="@style/PrimaryButtonStyle"
            android:id="@+id/pow1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_marginEnd="10dp"
            android:text="@string/pow_of_two"
            android:textSize="10sp"
            app:cornerRadius="40dp" />

        <Button
            style="@style/PrimaryButtonStyle"
            android:id="@+id/pow2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_marginEnd="10dp"
            android:text="@string/pow_of_y"
            android:textSize="13sp"
            app:cornerRadius="40dp" />

        <Button
            style="@style/PrimaryButtonStyle"
            android:id="@+id/log"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_marginEnd="10dp"
            android:text="@string/log"
            android:textSize="13sp"
            app:cornerRadius="40dp" />



        <Button
            style="@style/PrimaryButtonStyle"
            android:id="@+id/ln"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_marginEnd="10dp"
            android:text="@string/ln"
            android:textSize="13sp"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btn_0"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_marginEnd="10dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/white"
            android:text="@string/btn0"
            android:textSize="30sp"
            app:cornerRadius="15dp"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btn_dot"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_marginEnd="10dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/white"
            android:text="@string/dot"
            android:textSize="30sp"
            app:cornerRadius="15dp"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btn_change_sign"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_marginEnd="10dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/white"
            android:text="@string/change_sign"
            android:textSize="30sp"
            app:cornerRadius="15dp"/>
        <Button
            style="@style/PrimaryButtonStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btn_equals"
            android:layout_rowWeight="1"
            android:layout_rowSpan="1"
            android:layout_columnSpan="2"
            android:layout_columnWeight="1"
            android:layout_marginEnd="10dp"
            android:text="@string/equals"
            android:textSize="15sp"
            app:cornerRadius="15dp"/>



    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
